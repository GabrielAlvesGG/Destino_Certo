@model Cliente

<div class="container">
    <div class="row border ">
<form method="POST" asp-action="Atualizar" class="col-12 border  text-white top-200" style="align-items: center; text-align:center; background-color: #1b6ec2; border-radius: 5px;">
    <h1>Atualizar Clientes</h1>
        <input type="hidden" asp-for="id">
    <p>
        <label asp-for="nome">Nome:</label>
        <input type="text" asp-for="nome" placeholder="Nome" required>
    </p>
    <p>
        <label asp-for="login">Login</label>
        <input type="text" asp-for="login" placeholder="Login" required>
    </p>
    <p>
        <label asp-for="senha">Senha</label>
        <input type="password" asp-for="senha" placeholder="Senha" required>
    </p>
    <p>
        <label asp-for="dataNascimento">Data Nascimento:</label>
        <input type="date" asp-for="dataNascimento" required>
    </p>
    <p>
        <input type="submit" value="Cadastrar" class="btn btn-dark">
    </p>
</form>
    </div>
</div>