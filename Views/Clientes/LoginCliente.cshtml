@model Cliente
<div class="container" style="align:center;">
    <div class="row">
        <div class="col-12">
<form method="POST" asp-action="LoginCliente"  class="col-12 border  text-white top-200" style="align-items: center; text-align:center; background-color: #1b6ec2; border-radius: 5px;">
<h1>Login </h1>
    <p>
        <label asp-for="login">Login</label>
        <input type="text" asp-for="login" placeholder="Login" required>
    </p>
    <p>
        <label asp-for="senha">Senha</label>
        <input type="password" asp-for="senha" placeholder="Senha" required>
    </p>
    <p>
        <input type="submit" value="Logar" class="btn btn-dark">
    </p>
</form>
@ViewBag.Mensagem
    </div>
        </div>
</div>